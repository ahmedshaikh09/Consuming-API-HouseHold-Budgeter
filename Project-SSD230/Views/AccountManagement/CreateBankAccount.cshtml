@model BankAccountCreateEditViewModel

@{
    ViewBag.Title = "CreateBankAccount";
}

<h2>Create Bank Account</h2>

<div class="col-md-12">
    <form method="post">
        @Html.ValidationSummary(false)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
        @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })<br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@if (ViewBag.Result != null)
{
    if (ViewBag.Result.Message != null)
    {
        <span>@ViewBag.Result.Message</span>
    }
}
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <ul>
            <li>@error[0]</li>
        </ul>
    }
}