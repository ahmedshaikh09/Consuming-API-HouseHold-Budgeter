@model ResetPasswordViewModel

@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset Your Password</h2>

<p>Please provide your email , new password and the code which was sent you as via email to reset your password</p>

<div class="col-md-12">
    <form method="post">
        @Html.ValidationSummary(false)
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control", placeholder = "Email" })
        @Html.TextBoxFor(p => p.Password, new { @class = "form-control", placeholder = "Password" })
        @Html.TextBoxFor(p => p.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        @Html.TextBoxFor(p => p.Code, new { @class = "form-control", placeholder = "Code" })<br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@if (ViewBag.Result != null)
{
    if (ViewBag.Result.Message != null)
    {
        <span>@ViewBag.Result.Message</span>
    }
}
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <ul>
            <li>@error[0]</li>
        </ul>
    }
}