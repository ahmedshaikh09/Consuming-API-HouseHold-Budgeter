@model HouseHoldCreateEditViewModel
@{
    ViewBag.Title = "UpdateHouseHold";
}

<h2>Update House Hold</h2>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name:")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description:")
        @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>

@if (ViewBag.Result != null)
{
    if (ViewBag.Result.Message != null)
    {
        <span>@ViewBag.Result.Message</span>
    }
}
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <ul>
            <li>@error[0]</li>
        </ul>
    }
}